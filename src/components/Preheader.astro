---
import Logocompleto from "../assets/libs/icons astro/Logocompleto.astro"
import PreHeaderSocialMedia from "./Header/PreHeader/PreHeaderSocialMedia.astro"
import PreHeaderContact from "./Header/PreHeader/PreHeaderContact.astro"
---



<div class="container mx-auto flex justify-center items-center py-6 w-4/5 text-primary pl-12">
    <div class="flex lg:flex-row flex-col justify-between items-center w-full sm:gap-8">
        <div>
            <a href="index.html" class="flex items-center">
                <i class="w-48 text-prymary">
                    <Logocompleto />
                </i>
            </a>
        </div>
        
        <div>
            <ul class="flex gap-7.5">
                <PreHeaderContact 
                    href_contact="tel:+50766127168" 
                    icon_contact="fa-solid fa-phone" 
                    title_contact="Llámanos"
                    text_contact="(507) 66127168" 
                    />
                <PreHeaderContact 
                    href_contact="https://maps.app.goo.gl/jydgi2VLWNgf4ZfE9" 
                    icon_contact="fa-solid fa-location-dot" 
                    title_contact="Ubícanos"
                    text_contact="Calle Ernesto J. Castillero"
                    text_contact_br="Casa 07, Ancón, Panamá" 
                    />
                <PreHeaderContact 
                    href_contact="mailto:fwald@idac.com.pa?subject=INFORMACIÓN DE HOSPEDAJE&body=Estuve visitando tu página y deseo conocer la siguiente información: " 
                    icon_contact="fa-solid fa-envelope" 
                    title_contact="Escíbenos"
                    text_contact="fwald@idac.com.pa"
                    />
            </ul>
        </div>

        <div>
            <ul class="flex items-center gap-1">
                <PreHeaderSocialMedia link_socialmedia="https://www.facebook.com" icon_socialmedia="fa-brands fa-facebook-f" />
                <PreHeaderSocialMedia link_socialmedia="https://www.instagram.com" icon_socialmedia="fa-brands fa-instagram" />
                <PreHeaderSocialMedia link_socialmedia="https://wa.me/+50766127168?text=He visitado tu página de hospedaje y deseo más información." icon_socialmedia="fa-brands fa-whatsapp" />
            </ul>
        </div>
    </div>
</div>
